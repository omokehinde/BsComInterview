@using BsComInterview.ViewModels;


@model HomeIndexViewModel

<form method="post" asp-controller="Home" asp-action="Save">

    <div class="form-group">
        <div class="col-md-10">
            <label for="email">Email:</label>
            <input type="text" asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label for="firstname">Transaction Number:</label>
            <input type="text" asp-for="TransactionNumber" class="form-control" />
            <span asp-validation-for="TransactionNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" style="padding-left:200px">
        <div class="col-md-10">
            <br />
            @*<input type="submit" value="Save"  />*@

            <a class="btn btn-lg btn-default" asp-controller="Home" asp-action="Index" >&larr; Back</a>
            <button type="submit" class="btn btn-primary btn-lg">Save</button>
        </div>
    </div>

</form>
